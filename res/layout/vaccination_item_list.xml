<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/listItemHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivVacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listItemTextView"
            style="@style/textview_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/listItemDetailButton"
            android:layout_width="@dimen/detail_height"
            android:layout_height="@dimen/detail_height"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_selector_detail"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="1dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_table_label"
            android:gravity="center"
            android:text="@string/vaccination_name"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4d0e5"
            android:baselineAligned="false"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/listVaccinationNameTextView"
            style="@style/textview_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#ffffff"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_table_label"
            android:gravity="center"
            android:text="@string/vaccination_gubun"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4d0e5"
            android:baselineAligned="false"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/listVaccinationGubunTextView"
            style="@style/textview_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="8"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/lsVaccination_period"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_table_label"
            android:gravity="center"
            android:text="@string/vaccination_period"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4d0e5"
            android:baselineAligned="false"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/listVaccinationPeriodTextView"
            style="@style/textview_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="8"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:minHeight="50dip"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_table_label"
            android:gravity="center"
            android:text="@string/vaccination_status"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4d0e5"
            android:baselineAligned="false"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/listVaccinationStatusTextView"
            style="@style/textview_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="8"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c4d0e5"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>